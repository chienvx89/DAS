@model DAS.Application.Models.ViewModels.VMCreateCategory

@{
    ViewData["Title"] = "Create";
    ViewData["PageHeaderContent"] = "Tạo người dùng mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <div class="card-title">Tạo mới người dùng</div>
            </div>
            <form role="form" asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IdCategoryType" class="control-label"></label>
                        @* <input asp-for="Description" class="form-control" />*@
                        @Html.DropDownList("IdCategoryType", ViewBag.CategoryType, "Select CategoryType", new { @class = "form-control select2" })
                        <span asp-validation-for="IdCategoryType" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="button" data-url="/Category/Create" data-type="html" value="Create" class="btn btn-primary QuickSubmitJS" />
                        <a asp-action="Index" class="btn btn-primary">Back to List </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

